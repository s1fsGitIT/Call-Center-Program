@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    ViewData["Title"] = "Technician Call Management";
}

<div class="container">
    <a href="/" class="back-button">
        <i class="fas fa-arrow-left"></i>
    </a>
    <header>
        <div class="logo">
            <i class="fas fa-tools"></i>
            <span>Technician Dashboard</span>
        </div>
    </header>

    <div class="content">
        <h2>Assigned Calls</h2>
        <p>Manage student calls, update call status, or return calls from the virtual log.</p>

        <div class="actions">
            <button class="btn" style="background-color: var(--on-call); color: white;">
                <i class="fas fa-phone"></i> Connect
            </button>
            <button class="btn" style="background-color: var(--on-hold); color: white;">
                <i class="fas fa-pause-circle"></i> Put on Hold
            </button>
            <button class="btn" style="background-color: var(--hung-up); color: white;">
                <i class="fas fa-phone-slash"></i> End Call
            </button>
        </div>

        <table class="call-log">
            <thead>
                <tr>
                    <th>Call ID</th>
                    <th>Student</th>
                    <th>Status</th>
                    <th>Duration</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>#2001</td>
                    <td>Alice Johnson</td>
                    <td><span class="status on-call">On Call</span></td>
                    <td>02:10</td>
                </tr>
                <tr>
                    <td>#2002</td>
                    <td>Michael Smith</td>
                    <td><span class="status on-hold">On Hold</span></td>
                    <td>--</td>
                </tr>
                <tr>
                    <td>#2003</td>
                    <td>Susan Lee</td>
                    <td><span class="status hung-up">Hung Up</span></td>
                    <td>07:32</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

<style>

    /* Style for the back button */
    .back-button {
        position: fixed;
        top: 90px; /* Distance from the top of the page */
        left: 100px; /* Distance from the left of the page */
        display: inline-flex;
        align-items: center;
        font-size: 20px;
        color: #lightblue;
        text-decoration: none;
        border: 2px solid #333;
        border-radius: 5px;
        padding: 10px 15px;
        transition: background-color 0.3s ease, color 0.3s ease;
    }

    a {
        color: black;
    }

    .back-button:hover {
        background-color: lightblue;
        color: white;
    }

    .back-button i {
        margin-right: 5px; /* Space between arrow and text */
    }

    /* General styling for the container */
    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 20px;
    }

    /* Header styling */
    header {
        background-color: #333; /* Dark background for header */
        padding: 15px 30px;
        text-align: center;
        transition: background-color 0.3s ease;
    }

    /* Logo section styling */
    .logo {
        display: flex;
        justify-content: center;
        align-items: center;
        color: white;
    }

        .logo i {
            font-size: 30px;
            margin-right: 10px; /* Space between icon and text */
        }

        .logo span {
            font-size: 24px;
            font-weight: bold;
        }

    /* Hover effect for header */
    header:hover {
        background-color: lightblue; /* Light blue on hover */
        border-radius: 25px;
    }

        /* Optional: Change text color on hover */
        header:hover .logo {
            color: black; /* Change text and icon color to black */
        }

</style>